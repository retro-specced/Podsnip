{
  "name": "podsnip",
  "productName": "Podsnip",
  "version": "1.0.0",
  "description": "Podcast annotation and streaming app for Linux",
  "main": "dist/main/main.js",
  "author": {
    "name": "Gerald",
    "email": "gerald@podsnip.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "better-sqlite3": "^12.6.2",
    "feedparser": "^2.2.10",
    "form-data": "^4.0.0",
    "framer-motion": "^12.33.0",
    "lucide-react": "^0.563.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.podsnip.app",
    "productName": "Podsnip",
    "icon": "icon.png",
    "files": [
      "dist/**/*",
      "package.json",
      "icon.png"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "AudioVideo",
      "icon": "icon.png"
    }
  }
}